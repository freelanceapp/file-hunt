<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_lock_password"
    android:scrollbars="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="100">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/top_lock_pass_image"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="50"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:background="@drawable/bg_round_corner"
            android:orientation="vertical" >


            <EditText
                android:id="@+id/password"
                android:layout_height="@dimen/dp40"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:inputType="textPassword"
                android:hint="@string/password_hint"
                android:textColorHint="@color/color_icon"
                android:background="@drawable/corneredlayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"

                android:singleLine="true"
                android:textColor="@color/black"
                android:padding="@dimen/dp5"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"
                android:imeOptions="actionNext"
                />

            <EditText
                android:id="@+id/cpassword"
                android:layout_height="@dimen/dp40"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="15dp"
                android:inputType="textPassword"
                android:hint="@string/cpassword_hint"
                android:background="@drawable/corneredlayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColorHint="@color/color_icon"
                android:textColor="@color/black"
                android:padding="@dimen/dp5"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"
                android:layout_below="@+id/password"
                 android:imeOptions="actionDone"
                />

            <Button
                android:id="@+id/done_button"
                android:layout_height="@dimen/dp40"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="@string/done"
                android:padding="@dimen/dp5"
                android:textStyle="bold"
                android:textSize="@dimen/sp20"
                android:textAllCaps="false"
                android:background="@drawable/buttonshape"
                android:layout_below="@+id/cpassword"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/done_button"/>

        </RelativeLayout>

    <!--    <ImageView
            android:id="@+id/appLogoView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_logo_lock_pass"/>-->

        <View
            android:id="@+id/viewLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp2"
            android:background="@color/white"
            android:layout_below="@id/relativeLayout"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginBottom="@dimen/dp45"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/viewLayout"/>
    </RelativeLayout>



</LinearLayout>
</ScrollView>
