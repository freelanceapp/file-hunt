<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:itemBackground">@color/design_fab_shadow_mid_color</item>
    </style>


    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:itemBackground">@color/design_fab_shadow_mid_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--For change hamburger icon color-->
    </style>

    <!--For change hamburger icon color-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/onePlusAccentColor_device_default_dark</item>
      </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemBackground">@color/design_fab_shadow_mid_color</item>
    </style>


    <style name="TextViewStyle1" parent="android:Widget.TextView">
        <item name="android:textColor">#3E3C3C</item>
        <item name="android:paddingLeft">@dimen/dp15</item>
        <item name="android:paddingTop">@dimen/dp15</item>
        <item name="android:paddingBottom">@dimen/dp15</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextViewStyleBlack" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/dp15</item>
        <item name="android:paddingTop">@dimen/dp15</item>
        <item name="android:paddingBottom">@dimen/dp15</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gradation_05</item>
    </style>



    <style name="WallpaperTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/WallpaperDrawable</item>
        <item name="android:textColorSecondary">@color/titleColor</item>

    </style>
    <style name="WallpaperDrawable"
        parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_option_menu_white</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <!-- TextView Style 1-->

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>


</resources>
