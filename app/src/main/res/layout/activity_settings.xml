<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckimg"
    android:layout_height="match_parent">
<LinearLayout
    android:alpha="0.6"
    android:layout_marginTop="@dimen/dp2"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtShowHiddenFiles"
        style="@style/TextViewStyleBlack"
        android:text="@string/showfiles"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/switchHiddenfile"
        android:layout_marginRight="@dimen/dp15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
         android:thumb="@drawable/switch_custom_selector"
          android:track="@drawable/switch_custom_track"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:visibility="visible"
         android:id="@+id/switchHiddenfile"
         android:layout_alignParentRight="true"
         android:paddingRight="@dimen/dp15"

        />


</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/gradation_05"

        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtDispSmallFile"
        style="@style/TextViewStyleBlack"
        android:text="@string/dispsmallfile"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/switchSmallFile"
        android:layout_marginRight="@dimen/dp15"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Switch android:id="@+id/switchSmallFile"
            android:thumb="@drawable/switch_custom_selector"
            android:track="@drawable/switch_custom_track"
            android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/dp15"
            android:layout_height="wrap_content"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/gradation_05"

        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHideexternal"
            style="@style/TextViewStyleBlack"
            android:text="@string/hidestorage"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
         android:layout_toLeftOf="@+id/switchHideStorage"
            android:layout_marginRight="@dimen/dp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch android:id="@+id/switchHideStorage" android:layout_width="wrap_content"
            android:thumb="@drawable/switch_custom_selector"
            android:track="@drawable/switch_custom_track"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp15"
            android:buttonTint="@color/onePlusAccentColor_device_default_dark"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/gradation_05"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTextSize"
            style="@style/TextViewStyleBlack"
            android:text="@string/txtsize"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/dp15"
        android:layout_alignParentRight="true"
        android:id="@+id/txtSize_Spinner"
        style="@style/spinner_style" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/gradation_05"

        />


    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/gradation_05"

        />

    <RelativeLayout
         android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtAbout"
            style="@style/TextViewStyleBlack"
            android:text="@string/txtAbout"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>



</LinearLayout>

</LinearLayout>