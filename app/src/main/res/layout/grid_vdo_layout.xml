<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:id="@+id/video_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        >
  <!-- android:src="@drawable/vdo_placeholder"-->
        <ImageView android:id="@+id/vdoThumbNail"
            android:src="@drawable/img_placeholder"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@mipmap/ic_play_media"
            />

        <CheckBox android:id="@+id/itemCheckBoxVdo" android:layout_width="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="-30dp"
            android:visibility="gone"
            android:checked="true"
            android:buttonTint="@color/onePlusAccentColor_device_default_dark"
            android:layout_height="wrap_content"
            />

    </FrameLayout>
</LinearLayout>